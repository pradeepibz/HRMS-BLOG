<%= form_for @blog do |f| %>
  <div class="form-group">
    <label>Select Language</label>
    <%= f.select :language_id, options_for_select(Language.all.map{|l| [l.name, l.id]}), {prompt: "Select Language"}, class: "form-control", required: true %>
  </div>
  <div class="form-group">
    <label>Title</label>
    <%= f.text_field :title, class: "form-control", required: true %>
  </div>
  <div class="form-group">
    <label>Description</label>
    <%= f.cktext_area :description, class: "form-control" %>
  </div>
  <div class="form-action">
    <%= f.submit "Post" %>
  </div>
<% end %>
